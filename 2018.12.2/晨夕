public class Solution {
    public void reOrderArray(int [] array) {
        int [] arr = new int [array.length];
        int j = 0;
        int k = array.length-1;
        for(int i = 0; i < array.length; i++){
            if(array[i]%2 == 1){
                arr[j] = array[i];
                j++;
            }
        }
        for(int i = array.length-1; i >= 0; i--){
            if(array[i]%2 == 0){
                arr[k] = array[i];
                k--;
            }
        }
        for(int i = 0; i < array.length; i++){
            array[i] = arr[i];            
        }
    }
}
